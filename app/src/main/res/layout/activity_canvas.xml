         android:layout_weight=".7"
         android:layout_marginEnd="@dimen/round_padding"
         android:background="#425165"
         android:gravity="left|center_vertical"
         android:padding="@dimen/round_padding"
         android:textColor="@color/angel_white"
         android:textSize="@dimen/font_app_name"
         android:hint="พิมพ์ชื่อของท่าน (ผู้รับ)"
         android:textColorHint="@color/little_light_gray"
         android:drawableStart="@drawable/ic_keyboard_24_white_fixed"
