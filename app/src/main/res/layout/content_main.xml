<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textCapture"
                android:text="ฟังก์ชันถ่ายรูป"
                android:gravity="left"
                android:textColor="@color/colorAccentTemp"
                android:textSize="30sp"
                android:freezesText="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center"
                android:drawablePadding="15sp"
                android:drawableStart="@mipmap/ic_camera"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ถ่ายรูป"
                android:textSize="25sp"
                android:id="@+id/capture"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_state_list_animator"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F48FB1" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textScanner"
                    android:text="ฟังก์ชัน\nสแกนบาร์โค้ด"
                    android:gravity="left"
                    android:drawableRight="@mipmap/ic_scanner"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textColor="@color/colorAccentTemp"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="สแกนบาร์โค้ด"
                    android:textSize="25sp"
                    android:id="@+id/scan"
                    android:layout_weight="2"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_state_list_animator"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultScanner"
                    android:text="ผลลัพธ์ : "
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textColor="@color/colorAccentTemp"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:text="XXX"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:freezesText="true"
                    android:textColor="#000000"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location"
                android:layout_weight="2"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textGPS"
                android:text="ระบบแผนที่ GPS"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:freezesText="true"
                android:layout_weight="4"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textLat"
                    android:text="ละจิจูด : "
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/resultLat"
                    android:text="0.00"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textLng"
                    android:text="ลองจิจูด : "
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/resultLng"
                    android:text="0.00"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textGoogleMap"
                    android:text="แผนที่ Google Map"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="เปิดแผนที่ Google Map"
                    android:textSize="25sp"
                    android:id="@+id/openMapBtn"
                    android:layout_weight="2"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_white_shawdler"
                    android:textColor="@color/colorAccentTemp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
