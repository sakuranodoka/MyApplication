<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/round_padding"
            android:background="@color/lemon_wingless">

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:tint="@color/angel_white"
                android:src="@drawable/ic_arrow_back_36"
                android:id="@+id/backPressedState"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/double_round"

                android:gravity="center|left"

                android:id="@+id/view_dialog_title"

                android:text=""
                android:textColor="@color/angel_white"
                android:textSize="@dimen/dialog_title_header"/>
        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="5dp"
              android:background="@drawable/shape_elevation"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="@dimen/double_round">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:id="@+id/text_view_invoice_preview"

                    android:textColor="@color/space_gray"
                    android:textSize="@dimen/font_app_name"
                    android:text=""/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               android:layout_margin="2dp"

                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardElevation="@dimen/slice_align"
                card_view:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_fixed_height"

                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/double_round"

                        android:text="สแกนใบสั่งสินค้าเพิ่มเติม"
                        android:textSize="@dimen/font_text_view"
                        android:textColor="@color/angel_white"

                        android:id="@+id/btn_more_scan"

                        android:background="@color/lemon_light_fortune"

                        android:paddingEnd="@dimen/round_padding"
                        android:drawableEnd="@drawable/ic_chevron_24" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_fixed_height"

                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/double_round"

                        android:text="แสดงรายการใบสั่งสินค้าที่สแกนมาแล้ว"
                        android:textSize="@dimen/font_text_view"
                        android:textColor="@color/angel_white"

                        android:id="@+id/btn_more_info"

                        android:background="@color/lemon_wingless"

                        android:paddingEnd="@dimen/round_padding"
                        android:drawableEnd="@drawable/ic_chevron_24" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_fixed_height"

                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/double_round"

                        android:text="บันทึกรายการ"
                        android:textSize="@dimen/font_text_view"
                        android:textColor="@color/angel_white"

                        android:id="@+id/btn_next"

                        android:background="@color/lemon_resonance_structure"

                        android:paddingEnd="@dimen/round_padding"
                        android:drawableEnd="@drawable/ic_chevron_24" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>