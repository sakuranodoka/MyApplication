<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/angel_white"
    android:padding="@dimen/round_padding"

    android:id="@+id/relative_invoice_info"

    android:layout_marginTop="@dimen/round_padding"
    android:layout_marginStart="@dimen/slice_align"
    android:layout_marginEnd="@dimen/slice_align">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/slice_align"
        android:id="@+id/text_view_invoice_preview"
        android:gravity="left|center"
        android:text="RR11B13QWK"
        android:textColor="@color/stone_gray"
        android:textSize="@dimen/font_text_view"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/text_view_invoice_preview"
       android:paddingStart="@dimen/slice_align"
       android:paddingTop="@dimen/slice_align"
       android:id="@+id/text_view_invoice_address"
       android:gravity="left|center"
       android:text="เขตบางโคล่ กรุงเทพมหานคร"
       android:textColor="@color/space_gray"
       android:textSize="@dimen/font_text_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_invoice_address"
        android:paddingStart="@dimen/slice_align"
        android:paddingTop="@dimen/slice_align"
        android:id="@+id/text_view_invoice_date"
        android:gravity="left|center"
        android:text="13 พฤศจิกายน 2559 20:39:53 น."
        android:textColor="@color/space_gray"
        android:textSize="@dimen/font_text_view"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"

       android:padding="@dimen/round_padding"

       android:gravity="center"

       android:id="@+id/text_view_invoice_box_number"

       android:text="0/5"
       android:textColor="@color/space_gray"
       android:textSize="@dimen/font_text_view"/>

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:id="@+id/btn_remove"

        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear_24" />
</RelativeLayout>