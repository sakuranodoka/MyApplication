<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

   <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      card_view:cardPreventCornerOverlap="false"
      card_view:cardCornerRadius="0dp"
      card_view:cardBackgroundColor="@android:color/transparent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/slice_align"
          android:background="@color/lemon_light_fortune">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center|end"
             android:layout_margin="@dimen/round_padding"
             android:layout_toStartOf="@+id/dropdown_custom_date"
             android:layout_centerInParent="true"
             android:text="รูปแบบการแสดงผล : "
             android:textColor="@color/angel_white"
             android:textSize="@dimen/font_text_view"/>

         <autocomplete.InstantAutocomplete
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_centerInParent="true"
             android:id="@+id/dropdown_custom_date"
             android:text="แสดงเฉพาะวันนี้"
             android:textColor="@color/angel_white"
             android:textSize="@dimen/font_text_view"
             android:clickable="true"
             android:gravity="center"
             android:padding="@dimen/slice_align"
             android:paddingStart="@dimen/round_padding"
             android:dropDownWidth="match_parent"
             android:focusable="false"
             android:focusableInTouchMode="true"
             android:background="@color/lemon_light_fortune"
             android:drawableEnd="@drawable/ic_drop_down_24"/>
      </RelativeLayout>
   </android.support.v7.widget.CardView>
</RelativeLayout>